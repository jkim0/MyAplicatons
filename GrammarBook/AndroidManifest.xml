<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loyid.grammarbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditGrammarActivity"
            android:label="@string/title_activity_edit_grammar"
            android:parentActivityName="com.loyid.grammarbook.MainActivity">
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name=".GrammarListActivity"
            android:label="@string/title_activity_grammar_list"
            android:parentActivityName="com.loyid.grammarbook.MainActivity">
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name=".GrammarTestActivity"
            android:label="@string/title_activity_grammar_test"
            android:parentActivityName="com.loyid.grammarbook.MainActivity">
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.myfirstapp.MainActivity" />
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName="com.loyid.grammarbook.MainActivity">
            <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.myfirstapp.MainActivity" />
        </activity>
        
    </application>

</manifest>
